<!DOCTYPE html>
<html lang="en">
  <head>

    <title>Расчет рисков</title>
    
    <!-- Bootstrap core CSS -->
    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">

    <style>
      body {
        background-color: #8B00FF;
      }

      h1 {
        color: yellow;
      }
    </style>

  </head>

  <body>

  <!-- Верхгяя менюшка-->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Laba_2</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div><!--Конец верхней менюшки-->


    <div class="container">
      

      <div class="starter-template;" style="text-align:center">
          <h1>Расчет рисков</h1>
      </div>

      <div class = "row">
        <div class="col-xs-3">
        </div>

        <div class="col-xs-6" style="background-color: white; padding-top: 15px;">

          <form class="form-horizontal" role="form" method="post" action="/count">
            <% for (var i in data) { %>

            <div class="form-group">
              <label for="threat" class="col-sm-4 control-label"><%= data[i] %></label>
              <div class="col-sm-4">
                <input type="text" class="form-control" id=<%= i %> name=<%= i %> placeholder="Вероятность угрозы">
              </div>
              <div class="col-sm-4">
                <input type="text" class="form-control" id=<%= i %> name=<%= i %> placeholder="Критичность угрозы">
              </div>
            </div>
            <% } %>

            <div class="form-group">
              <div class="col-sm-10">
              </div>
              <div class="col-sm-2">
                <button type="submit" class="btn btn-success">Далее</button>
              </div>
            </div>
        
          </form>

        </div>

        <div class='col-xs-3'>
        </div>
      </div>
  
    </div><!-- /.container -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="bootstrap/js/bootstrap.min.js"></script>

  </body>
</html>
